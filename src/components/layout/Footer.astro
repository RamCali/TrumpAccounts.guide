---
import { getLocaleFromUrl, useTranslations, getLocalizedPath } from '../../i18n/config';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale, 'common');
const currentYear = new Date().getFullYear();

const lp = (path: string) => getLocalizedPath(path, locale);

const footerNav = [
  {
    heading: t('footer.guides'),
    links: [
      { label: t('footer.whatAre'), href: lp('/what-are-trump-accounts') },
      { label: t('footer.howToOpen'), href: lp('/how-to-open-trump-account') },
      { label: t('footer.irsNotice'), href: lp('/irs-notice-2025-68') },
      { label: t('footer.employers'), href: lp('/for-employers') },
      { label: t('footer.blog'), href: lp('/blog') },
    ],
  },
  {
    heading: t('footer.calculators'),
    links: [
      { label: t('footer.growth'), href: lp('/calculators/growth-calculator') },
      { label: t('footer.eligibility'), href: lp('/calculators/eligibility-checker') },
      { label: t('footer.employerMatch'), href: lp('/calculators/employer-match') },
      { label: t('footer.withdrawal'), href: lp('/calculators/withdrawal-simulator') },
      { label: t('footer.fundExpense'), href: lp('/calculators/fund-expense-tracker') },
    ],
  },
  {
    heading: t('footer.compare'),
    links: [
      { label: t('footer.vs529'), href: lp('/compare/trump-account-vs-529') },
      { label: t('footer.vsRoth'), href: lp('/compare/trump-account-vs-roth-ira') },
      { label: t('footer.vsUtma'), href: lp('/compare/trump-account-vs-utma') },
      { label: t('footer.vsCoverdell'), href: lp('/compare/trump-account-vs-coverdell') },
      { label: t('footer.vsBabyBonds'), href: lp('/compare/trump-account-vs-baby-bonds') },
    ],
  },
  {
    heading: t('footer.resources'),
    links: [
      { label: t('footer.faq'), href: lp('/faq') },
      { label: t('footer.glossary'), href: lp('/glossary') },
      { label: t('footer.about'), href: lp('/about') },
    ],
  },
];
---

<footer class="mt-16 border-t border-surface-700 bg-surface-800">
  <div class="mx-auto max-w-6xl px-4 py-10">
    <!-- Footer navigation grid -->
    <nav aria-label="Footer navigation" class="grid grid-cols-2 gap-8 md:grid-cols-4">
      {footerNav.map((section) => (
        <div>
          <h3 class="mb-3 text-sm font-semibold text-gray-300">{section.heading}</h3>
          <ul class="space-y-2" role="list">
            {section.links.map((link) => (
              <li>
                <a href={link.href} class="text-sm text-gray-500 no-underline transition-colors hover:text-gold-400">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </nav>

    <!-- Bottom bar -->
    <div class="mt-8 flex flex-col items-center justify-between gap-4 border-t border-surface-700 pt-6 md:flex-row">
      <!-- Left: Site info -->
      <p class="text-sm text-gray-500">
        <span class="font-semibold text-gray-300">TrumpAccounts.guide</span>
        &nbsp;&mdash;&nbsp;{t('footer.tagline')}
        {t('footer.bridging')}
        <a href={lp('/what-are-trump-accounts')} class="text-gold-400 no-underline hover:text-gold-300">{t('footer.rolloverLink')}</a>.
      </p>

      <!-- Right: Social icons -->
      <div class="flex items-center gap-4">
        <a href="https://facebook.com" target="_blank" rel="noopener noreferrer" aria-label="Facebook" class="text-gray-500 hover:text-white transition-colors">
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
        </a>
        <a href="https://twitter.com" target="_blank" rel="noopener noreferrer" aria-label="X (Twitter)" class="text-gray-500 hover:text-white transition-colors">
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
        </a>
        <a href="https://youtube.com" target="_blank" rel="noopener noreferrer" aria-label="YouTube" class="text-gray-500 hover:text-white transition-colors">
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
        </a>
      </div>
    </div>

    <!-- Disclaimer -->
    <div class="mt-6 border-t border-surface-700 pt-4 text-center text-xs leading-relaxed text-gray-500">
      <p>
        &copy; {currentYear} TrumpAccounts.guide &mdash; {t('footer.copyright')} <strong class="text-gray-400">{t('footer.educationalOnly')}</strong>.
        {t('footer.consultDisclaimer')}
      </p>
      <p class="mt-2">
        {t('footer.independentDisclaimer')} <strong class="text-gray-400">{t('footer.notAffiliated')}</strong> {t('footer.govDisclaimer')}
        <a href="https://trumpaccounts.gov" target="_blank" rel="noopener noreferrer" class="text-gold-400 no-underline hover:text-gold-300">{t('footer.govSite')}</a> {t('footer.govWebsite')}
      </p>
      <p class="mt-2">
        {t('footer.noDataStorage')}
      </p>
    </div>
  </div>
</footer>
